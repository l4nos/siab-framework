{
    "name": "lanos/siab-skeleton",
    "description": "Skeleton for building dezrez websites.",
    "keywords": ["microframework", "rest", "router", "psr7", "rezi"],
    "homepage": "http://dezrez.com",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Robert Lane",
            "email": "robert.lane@dezrez.com",
            "homepage": "http://www.dezrez.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "lanos/rezi-php": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
